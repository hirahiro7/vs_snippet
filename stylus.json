{
	// Place your snippets for stylus here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"CLEARFIX": {
		"prefix": "_CLEARFIX",
		"body": [
			"content: '.';",
			"display: block;",
			"height: 0;",
			"font-size:0;",
			"clear: both;",
			"visibility:hidden;"
		]
	},
	"CLEARFIX2": {
		"prefix": "_CLEARFIX",
		"body": [
			"content: '.';",
			"display: block;",
			"height: 0;",
			"font-size:0;",
			"clear: both;",
			"visibility:hidden;"
		]
	},
	"SETCENTER": {
		"prefix": "_SETCENTER",
		"body": [
			"position: absolute;",
			"top: 50%;",
			"left: 50%;",
			"transform: translate(-50%,-50%);",
		]
	},
	"PSEUDO": {
		"prefix": "_PSEUDO",
		"body": [
			"content: '.';",
			"position: absolute;",
			"display: block;",
			"top: 0;",
			"left: 0;",
		]
	},
	"_sp": {
		"prefix": "_sp",
		"body": [
			"+sp()",
			"  ",
		]
	},
	"_tb": {
		"prefix": "_tb",
		"body": [
			"+tb()",
			"  ",
		]
	},
	"_lg": {
		"prefix": "_lg",
		"body": [
			"+lg()",
			"  ",
		]
	},
	"_commentLong": {
		"prefix": "_commentLong",
		"body": [
			"/* =============================================",
			"$1",
			"============================================= */",
		]
	},
	"_clamp": {
		"prefix": "_clamp",
		"body": [
			"overflow: hidden;",
			"text-overflow: ellipsis;",
			"display: -webkit-box;",
			"-webkit-box-orient: vertical;",
			"-webkit-line-clamp: 3;",
		]
	},
	"_flxcenter": {
		"prefix": "_flxcenter",
		"body": [
			"display: flex;",
			"justify-content: center;",
			"align-items: center;",
		]
	},
	"_flxcenter-col": {
		"prefix": "_flxcenter-col",
		"body": [
			"display: flex;",
			"flex-direction: column;",
			"align-items: center;",
		]
	},
	"_abscenter": {
		"prefix": "_abscenter",
		"body": [
			"position: absolute;",
			"top: 50%;",
			"left: 50%;",
			"transform: translate(-50%,-50%);",
		]
	},
	"_imgcover": {
		"prefix": "_imgcover",
		"body": [
			"width: 100%;",
			"height: 100%;",
			"object-fit: cover;",
		]
	},
}